{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ]
}